<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <TextView
            android:id="@+id/txttitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro De Usuario"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:background="@color/azul" />

        <ImageView
            android:id="@+id/imguser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttitulo"
            android:src="@drawable/asd" />

        <TextView
            android:id="@+id/lb_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="20sp"
            android:textColor="@color/azul"
            android:layout_below="@+id/imguser"
            />


        <EditText
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:inputType="textCapWords"
            android:layout_below="@+id/lb_nombre"/>

        <TextView
            android:id="@+id/lb_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clave:"
            android:textSize="20sp"
            android:textColor="@color/azul"
            android:layout_below="@+id/txtcorreo2"/>

        <EditText
            android:id="@+id/txtclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite su clave(5 digitos)"
            android:inputType="textPassword"
            android:layout_below="@+id/lb_clave"
            />

        <TextView
            android:id="@+id/lb_rclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repita su Clave:"
            android:textSize="20sp"
            android:textColor="@color/azul"
            android:layout_below="@id/txtclave"/>

        <EditText
            android:id="@+id/txtclave2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Debe ser la misma clave"
            android:inputType="textPassword"
            android:layout_below="@id/lb_rclave"/>

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_below="@id/txtrol"


            />


        <TextView
            android:id="@+id/txt_confirmacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/rojo"
            android:layout_below="@id/btn_registrar"

            />

        <TextView
            android:id="@+id/lb_rol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol: "
            android:textSize="20sp"
            android:layout_below="@id/txtclave2"
            android:textColor="@color/azul"
            />

        <EditText
        android:id="@+id/txtrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rol: Admin o Invitado"
        android:layout_below="@id/lb_rol"/>

        <TextView
            android:id="@+id/lb_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electronico: "
            android:textSize="20sp"
            android:layout_below="@id/txtnombre"
            android:textColor="@color/azul"
            />

        <EditText
            android:id="@+id/txtcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="12345678@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_below="@id/lb_correo"/>

        <TextView
            android:id="@+id/lb_correo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electronico: "
            android:textSize="20sp"
            android:layout_below="@id/txtcorreo"
            android:textColor="@color/azul"
            />

        <EditText
            android:id="@+id/txtcorreo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="12345678@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_below="@id/lb_correo2"/>






    </RelativeLayout>
    </ScrollView>

</layout>